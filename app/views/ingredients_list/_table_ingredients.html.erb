<table border=1>
	<tr>
		<th>Grocery List</th>
		<th>Items on hand</th>
	</tr>
	<% @all_ingredients.each do |needed, stocked| %>
		<tr>
			<td>
				<% if stocked[0].to_f >= needed[0].to_f %><strike><% end %>
				<%= needed[0] %>
				<%= needed[1] %>
				<% if stocked[0].to_f >= needed[0].to_f %></strike><% end %>
			</td>
			<td>
				<%= stocked[0] %>
				<%= stocked[1] %>
			</td>
		</tr>
	<% end %>
</table>